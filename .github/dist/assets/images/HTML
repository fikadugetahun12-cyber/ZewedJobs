<!-- File: generate-icons.html -->
<!DOCTYPE html>
<html>
<head>
    <title>PWA Icon Generator</title>
    <style>
        body { font-family: Arial; padding: 20px; }
        .preview { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin: 20px 0; }
        .icon-preview { text-align: center; }
        .icon-preview img { border: 1px solid #ccc; margin: 5px; }
        button { padding: 10px 20px; background: #4361ee; color: white; border: none; cursor: pointer; }
    </style>
</head>
<body>
    <h1>PWA Icon Generator</h1>
    <p>Right-click each icon to save:</p>
    
    <div class="preview" id="previewContainer"></div>
    
    <button onclick="generateAll()">Generate All Icons</button>
    <button onclick="downloadAll()">Download All as ZIP</button>
    
    <script>
        const sizes = [72, 96, 128, 144, 152, 192, 384, 512];
        const colors = {
            primary: '#4361ee',
            secondary: '#7209b7',
            accent: '#f72585',
            background: '#ffffff'
        };
        
        function generateIcon(size) {
            const canvas = document.createElement('canvas');
            canvas.width = size;
            canvas.height = size;
            const ctx = canvas.getContext('2d');
            
            // Gradient background
            const gradient = ctx.createLinearGradient(0, 0, size, size);
            gradient.addColorStop(0, colors.primary);
            gradient.addColorStop(1, colors.secondary);
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, size, size);
            
            // Circle
            ctx.fillStyle = colors.accent;
            ctx.beginPath();
            ctx.arc(size/2, size/2, size/3, 0, Math.PI * 2);
            ctx.fill();
            
            // Text
            ctx.fillStyle = colors.background;
            ctx.font = `bold ${size/3}px Arial`;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText('PW', size/2, size/2);
            
            return canvas.toDataURL('image/png');
        }
        
        function generateAll() {
            const container = document.getElementById('previewContainer');
            container.innerHTML = '';
            
            sizes.forEach(size => {
                const dataUrl = generateIcon(size);
                const div = document.createElement('div');
                div.className = 'icon-preview';
                div.innerHTML = `
                    <img src="${dataUrl}" width="64" height="64">
                    <div>${size}x${size}</div>
                    <a href="${dataUrl}" download="icon-${size}.png">Download</a>
                `;
                container.appendChild(div);
            });
        }
        
        function downloadAll() {
            // Requires JSZip library
            alert('For full ZIP generation, include JSZip library');
        }
        
        // Generate on load
        window.onload = generateAll;
    </script>
</body>
</html>
